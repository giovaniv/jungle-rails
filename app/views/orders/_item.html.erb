
<% if product = Product.find_by(id: item.product_id) %>
  <% item_total = product.price * item.quantity %>
  <% @cart_total += item_total %>

  <tr>
    <td colspan=2>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= product.name %></h4>
      <br>
      <p><%= product.description %></p>
    </td>
    <td>
      <%= item.quantity %>
    </td>
    <td>
      <%= item_total%>
    </td>
  </tr>
<% end %>
